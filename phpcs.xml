<?xml version="1.0"?>
<ruleset name="Project Rules">
    <rule ref="PSR2" />
    <!-- Exclude function doc comment rule for test files only -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude-pattern>proxy/tests/*</exclude-pattern>
    </rule>

    <!-- Require code documentation (PHPDoc) -->
    <rule ref="Squiz.Commenting.FileComment">
        <exclude-pattern>proxy/*</exclude-pattern>
    </rule>
    <!-- Exclude AvoidStaticAccess rule -->
    <rule ref="SlevomatCodingStandard.Classes.StaticAccess">
        <exclude-pattern>*</exclude-pattern>
    </rule>
</ruleset>
