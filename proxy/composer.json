{
    "require": {
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tent\\": "html/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --coverage-html coverage/ tests",
        "tests:unit": "vendor/bin/phpunit --coverage-html coverage/ tests/unit",
        "tests:integration": "vendor/bin/phpunit --coverage-html coverage/ tests/integration",
        "lint": "phpcs --standard=phpcs.xml",
        "lint:fix": "phpcbf --standard=phpcs.xml"
    }
}