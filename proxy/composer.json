{
    "name": "darthjee/tent",
    "version": "0.0.1",
    "description": "A simple and extensible PHP web server.",
    "license": "MIT",
    "require": {
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Tent\\": "html/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^4.0.1",
        "phpdocumentor/phpdocumentor": "^3.9",
        "slevomat/coding-standard": "^8.26"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --coverage-html coverage/ tests",
        "tests:unit": "vendor/bin/phpunit --coverage-html coverage/ tests/unit",
        "tests:integration": "vendor/bin/phpunit --coverage-html coverage/ tests/integration",
        "lint": "phpcs --standard=phpcs.xml",
        "lint:fix": "phpcbf --standard=phpcs.xml",
        "docs": "vendor/bin/phpdoc -d source"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
