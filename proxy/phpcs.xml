<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom PHP_CodeSniffer ruleset</description>
    
    <!-- Use PSR12 as base -->
    <rule ref="PSR12"/>
    <!-- Detect unused variables -->
    <rule ref="SlevomatCodingStandard.Variables.UnusedVariable"/>
    <rule ref="SlevomatCodingStandard.Variables.UselessVariable"/>
    
    <!-- Exclude side effects rule for tests directory -->
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>tests/*</exclude-pattern>
        <exclude-pattern>source/index.php</exclude-pattern>
    </rule>

    <!-- Exclude namespace requirement for entry point -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>source/index.php</exclude-pattern>
    </rule>

    <!-- Require code documentation (PHPDoc) -->
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <!-- Include source files -->
    <file>source</file>
    <file>tests</file>
    
    <!-- Exclude static directory -->
    <exclude-pattern>source/static/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
